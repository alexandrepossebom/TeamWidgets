<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:orientation="horizontal"
    card_view:cardCornerRadius="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView01"
                android:layout_width="@dimen/detail_team_image_size"
                android:layout_height="@dimen/detail_team_image_size"
                android:contentDescription="@string/team_image_desc"
                android:elevation="@dimen/elevation"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:src="@drawable/generic_team"
                tools:ignore="UnusedAttribute"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:text="@string/versus"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

            <ImageView
                android:id="@+id/imageView02"
                android:layout_width="@dimen/detail_team_image_size"
                android:layout_height="@dimen/detail_team_image_size"
                android:contentDescription="@string/team_image_desc"
                android:elevation="@dimen/elevation"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:src="@drawable/generic_team"
                tools:ignore="UnusedAttribute"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingEnd="30dp"
            android:paddingStart="30dp">

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/textViewTimeRemain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/textViewLeague"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/textViewTransmission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/textViewPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:padding="5dp"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>