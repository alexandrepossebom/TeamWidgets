<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AboutTheme" parent="AppTheme">
        <item name="windowActionBar">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>


    <style name="WidgetAdversario">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1.3</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/widget_adve_size</item>
    </style>

    <style name="WidgetData" parent="@style/WidgetAdversario">
        <item name="android:textSize">@dimen/widget_data_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

</resources>